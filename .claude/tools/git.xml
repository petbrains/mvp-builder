<g>
<b p="feature|fix|refactor|docs|chore|hotfix|release" 
   f="&lt;p&gt;/&lt;scope&gt;/&lt;desc&gt;|&lt;hotfix|release&gt;/&lt;desc&gt;"
   r="^(feature|fix|refactor|docs|chore)/[a-z0-9._-]+/[a-z0-9._-]+|(hotfix|release)/[a-z0-9._-]+$">
  <s f="main">feature|fix|refactor|docs|chore|release</s>
  <s f="release/x.y.z|main">hotfix</s>
</b>
<cm f="[KEY-123] &lt;t&gt;(&lt;s&gt;): &lt;msg&gt;" t="feature|fix|refactor|docs|chore|test|build|ci"/>
<c n="add" d="Stage files" o="&lt;files&gt;|.|-p"/>
<c n="branch" d="List/manage" o="[-r|-a]|--[no-]contains &lt;sha&gt;"/>
<c n="checkout|switch" d="Change branch" o="&lt;branch&gt;"/>
<c n="checkout -b" d="Create &amp; switch" o="&lt;name&gt; [&lt;start&gt;]"/>
<c n="commit" d="Record" o="-m '&lt;msg&gt;'|-m '&lt;t&gt;' -m '&lt;b&gt;'|--amend"/>
<c n="diff" d="Compare" o="[&lt;ref&gt;]|--staged|-U&lt;n&gt;"/>
<c n="init" d="Initialize" o="[&lt;path&gt;]"/>
<c n="log" d="History" o="--oneline -n &lt;n&gt;|--stat -n &lt;n&gt;|--graph --all"/>
<c n="reset" d="Unstage" o="[&lt;file&gt;]|--hard" w="hard=DANGER"/>
<c n="show" d="Display" o="&lt;ref&gt;"/>
<c n="status" d="Status" o="[-s|--porcelain]"/>
<c n="push" d="Upload" o="[-u origin &lt;branch&gt;]"/>
<c n="pull" d="Fetch+merge" o="[--rebase]"/>
<c n="merge" d="Combine" o="[--no-ff] &lt;branch&gt;"/>
<c n="stash" d="Store temp" o="[save '&lt;msg&gt;']|pop|list"/>
</g>