{
    "permissions": {
      "allow": [
        "Bash(npm run:*)",
        "Bash(npx:*)",
        "Bash(pnpm:*)",
        "Bash(yarn:*)",
        "Bash(bun:*)",
        "Bash(git log:*)",
        "Bash(git diff:*)",
        "Bash(git status:*)",
        "Bash(git branch:*)",
        "Bash(git show:*)",
        "Bash(mkdir:*)",
        "Bash(cat:*)",
        "Bash(ls:*)",
        "Bash(head:*)",
        "Bash(tail:*)",
        "Bash(grep:*)",
        "Bash(find:*)",
        "Bash(wc:*)"
      ],
      "deny": [
        "Read(./.env)",
        "Read(./.env.*)",
        "Read(./secrets/**)",
        "Read(./**/credentials.json)",
        "Read(./**/*_rsa)",
        "Read(./**/*.pem)",
        "Read(./**/*.key)"
      ],
      "ask": [
        "Bash(git push:*)",
        "Bash(git commit:*)",
        "Bash(rm -rf:*)",
        "Bash(sudo:*)"
      ]
    },
    "env": {
      "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1"
    },
    "enabledMcpjsonServers": [
      "context7",
      "sequential-thinking"
    ],
    "includeCoAuthoredBy": true
  }