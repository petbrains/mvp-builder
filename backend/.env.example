# SpendNote Backend Environment Configuration
# Copy this file to .env and fill in your values

# Database Connection
# PostgreSQL connection string for production
# SQLite can be used for local development: file:./dev.db
DATABASE_URL="postgresql://user:password@localhost:5432/spendnote"

# Session Configuration
# Generate with: openssl rand -base64 32
SESSION_SECRET="your-session-secret-here-generate-with-openssl"

# Session TTL in milliseconds (default: 7 days = 604800000)
SESSION_TTL_MS=604800000

# Server Configuration
PORT=3000
NODE_ENV=development

# Rate Limiting (per PRD: 10 requests/minute/IP for auth endpoints)
AUTH_RATE_LIMIT=10
